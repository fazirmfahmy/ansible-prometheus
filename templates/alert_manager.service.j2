# {{ansible_managed}}

[Unit]
Description=Prometheus alert manager service
After=network.target
Wants=network.target

[Service]
ExecStart={{ installation_directory_path }}/{{ prometheus_alert_manager_archive }}/alertmanager {% for config in prometheus_alert_manager_service_config if config[1] is not none %}--{{ config[0] }}={{ config[1] }} {% endfor %}

Restart=always
RestartSec=20
TimeoutSec=300
User={{owner_name}}
Group={{group_name}}
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
